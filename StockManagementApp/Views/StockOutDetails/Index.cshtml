@model IEnumerable<StockManagement.Models.EntityModels.StockOutDetail>

@{
    ViewBag.Title = "StockOutDetail List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="wow fadeInDown">StockOutDetail List</h2>

<p class="wow fadeInDown">
    @Html.ActionLink("Create New", "Create",null,new {@class="btn btn-warning"})
</p>
<table class="table table-bordered wow fadeInDown">
    <tr>
        <th>
            SL
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockOut.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qty)
        </th>
        <th>
            @Html.DisplayName("Action")
        </th>
    </tr>
    @{
        var sl = 0;
    }

@foreach (var item in Model)
{
    sl++;
    <tr>
        <td>
            @sl
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StockOut.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qty)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
            @Html.ActionLink("Details", "Details", new {id = item.Id}) |
            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
        </td>
    </tr>
}

</table>
