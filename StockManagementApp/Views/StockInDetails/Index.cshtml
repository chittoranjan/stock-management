@model IEnumerable<StockManagement.Models.EntityModels.StockInDetail>

@{
    ViewBag.Title = "StockDetails List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="wow fadeInDown">StockDetails List</h2>

<p class="wow fadeInDown">
    @Html.ActionLink("Create New", "Create",null,new {@class="btn btn-warning" })
</p>
<table class="table table-bordered wow fadeInDown">
    <tr>
        <th>
            SL
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.Product.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockIn.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qty)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.StockIn.StockDate)
        </th>
        <th>
            @Html.DisplayName("Action")
        </th>
    </tr>
    @{
        var sl = 0;
        if (Model.Count() != 0)
        {
            foreach (var item in Model)
            {
                sl++;
                <tr>
                    <td>
                        @sl
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem=>item.Product.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StockIn.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Qty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StockIn.StockDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr class="panel-body text-danger">
                <td>
                    <h3>Data not found!</h3>
                </td>
            </tr>
        }
    }


</table>
