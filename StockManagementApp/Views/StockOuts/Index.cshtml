@model IEnumerable<StockManagement.Models.EntityModels.StockOut>

@{
    ViewBag.Title = "StockOut List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="wow fadeInDown">StockOut List</h2>

<p class="wow fadeInDown">
    @Html.ActionLink("Create New", "Create",null,new {@class="btn btn-warning"})
</p>
<table class="table table-bordered wow fadeInDown">
    <tr>
        <th>
            SL
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockOutDate)
        </th>
        <th>
            @Html.DisplayName("Action")
        </th>
    </tr>
    @{
        var sl = 0;
        
    }
    @foreach (var item in Model)
            {
                sl++;
        <tr>
            <td>
                @sl
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockOutDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
